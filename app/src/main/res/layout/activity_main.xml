<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Compass container to overlay grid, needle, and labels -->
    <FrameLayout
        android:id="@+id/compassFrame"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/compassGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Compass grid"
            android:src="@drawable/compass_grid" />

        <!-- Cardinal labels inside the frame for tighter placement -->
        <TextView
            android:id="@+id/labelN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="6dp"
            android:text="@string/north"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labelS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="6dp"
            android:text="@string/south"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labelW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="6dp"
            android:text="@string/west"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labelE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="6dp"
            android:text="@string/east"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/needle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="Compass needle"
            android:src="@drawable/compass_needle" />
    </FrameLayout>

    <TextView
        android:id="@+id/headingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/compassFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Heading: 0Â°" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calibrateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrate"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/headingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
